# AWS Configuration
AWS_REGION=eu-west-1
AWS_ACCOUNT_ID=123456789012

# Telegram Bot
TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11
TELEGRAM_CHAT_ID=123456789

# DynamoDB Tables
TASKS_TABLE_NAME=PersonalTasks
TASKS_TABLE_ARN=arn:aws:dynamodb:eu-west-1:123456789012:table/PersonalTasks

# API Gateway
TASK_API_ENDPOINT=https://api.example.com/prod

# MCP Server
MCP_SERVER_URL=https://your-mcp-server.com
MCP_API_KEY=your-mcp-api-key-here
MCP_AUTH_ENABLED=true

# Microsoft Outlook (Azure AD App)
OUTLOOK_CLIENT_ID=your-azure-application-id
OUTLOOK_CLIENT_SECRET=your-azure-application-secret
OUTLOOK_TENANT_ID=your-azure-tenant-id
OUTLOOK_REDIRECT_URI=http://localhost:8000/auth/callback

# AWS Bedrock (per Agent Core)
BEDROCK_AGENT_ID_ORCHESTRATOR=agent-orchestrator-id
BEDROCK_AGENT_ID_TASK_MANAGER=agent-task-manager-id
BEDROCK_AGENT_ID_DAILY_BRIEFING=agent-daily-briefing-id
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# Lambda Functions
LAMBDA_TASK_POST_ARN=arn:aws:lambda:eu-west-1:123456789012:function:TaskPost
LAMBDA_TASK_GET_ARN=arn:aws:lambda:eu-west-1:123456789012:function:TaskGet

# Scheduling (EventBridge)
DAILY_BRIEFING_TIME=08:00
DAILY_BRIEFING_TIMEZONE=Europe/Rome

# Logging
LOG_LEVEL=INFO
ENABLE_CLOUDWATCH=true

# Security
JWT_SECRET=your-jwt-secret-for-api-auth
ENCRYPTION_KEY=your-32-character-encryption-key
